<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <Company>sabatex on git</Company>
    <Product>Controls for WPF Core</Product>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Version>3.1.4</Version>
    <Authors>Serhiy Lakas</Authors>
    <Copyright>2015 Serhiy Lakas</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/sabatex/WPF.Controls</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageTags>#WPF #Controls</PackageTags>
    <PackageReleaseNotes>Migrate from ntics</PackageReleaseNotes>
    <AssemblyName>sabatex.WPF.Controls</AssemblyName>
    <RootNamespace>sabatex.WPF.Controls</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AvalonLibrary" Version="2.4.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="sabatex.Extensions" Version="3.1.4" />
  </ItemGroup>

</Project>
